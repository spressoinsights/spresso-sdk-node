{
    "name": "spresso-sdk-node",
    "description": "Spresso SDK for Node",
    "sideEffects": false,
    "scripts": {
        "prepare": "husky install",
        "bootstrap": "lerna bootstrap",
        "build": "lerna run build",
        "lint": "npx eslint ./packages",
        "test": "echo \"Error: no test specified\" && exit 1",
        "patch": "lerna version --no-git-tag-version --no-push --yes patch",
        "localPublish": "lerna publish from-package --yes --no-git-tag-version --no-push --registry http://localhost:4873",
        "createTestNPMUser": "npm-cli-adduser --registry http://localhost:4873 --username testuser --password testpass --email test@example.com"
    },
    "author": "",
    "license": "ISC",
    "workspaces": [
        "packages/*",
        "clients/*"
    ],
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "5.29.0",
        "eslint": "8.18.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-import-resolver-typescript": "2.7.1",
        "eslint-plugin-chai-friendly": "0.7.2",
        "eslint-plugin-functional": "4.2.1",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-mocha": "10.0.5",
        "husky": "8.0.1",
        "lerna": "5.6.1",
        "lint-staged": "13.0.2",
        "npm-cli-adduser": "1.1.4",
        "pretty-quick": "3.1.3"
    },
    "lint-staged": {
        "*.{ts}": "eslint --fix",
        "*.{ts, json}": "pretty-quick --staged"
    }
}
